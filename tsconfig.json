{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "declaration": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "./dist",
    "experimentalDecorators": false /*-f*/,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    //"alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
